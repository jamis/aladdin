<%= turbo_frame_tag dom_id(@resident) do %>
  <%= form_with model: @resident, data: { turbo_stream: true } do |f| %>
    #<%= f.text_field :room, placeholder: 'Rm#', class: 'w-16 px-2 py-1 rounded', autofocus: true %>
    : <%= f.text_field :name, placeholder: "Resident's name", class: 'px-2 py-1 rounded' %>
    <span class="mx-2"><%= f.check_box :current %> Current</span>
    <%= f.submit 'Save', class: "ml-2 border border-green-600 bg-green-100 hover:bg-green-200 cursor-pointer px-2 py-1 rounded" %>
    or <%= link_to "cancel", resident_path(@resident), class: 'text-red-600 underline' %>
  <% end %>
<% end %>
