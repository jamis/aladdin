<h1 class="text-2xl font-bold mb-4"><%= @session.activity.name %> - <%= @session.occurred_on %></h1>

<table>
  <tr class="bg-gray-200 border-b border-black">
    <th class="text-left p-1">Name</th>
    <th class="p-1">Room</th>
    <th class="p-1">Invited</th>
    <th class="p-1">Attended</th>
    <th class="text-left p-1">Notes</th>
  </tr>

  <% each_resident_with_engagement_for(@session) do |resident, engagement, index| %>
    <tr class="<%= index.odd? ? 'bg-gray-100' : '' %>">
      <td class="p-1">
        <%= resident.name %>
        <% if resident.former? %>
          <span class="text-red-600 text-sm">(former resident)</span>
        <% end %>
      </td>
      <td class="text-center p-1"><%= resident.room %></td>
      <td class="text-center p-1"><%= check_box_tag :invited, 1, engagement.invited? %></td>
      <td class="text-center p-1"><%= check_box_tag :attended, 1, engagement.attended? %></td>
      <td class="p-1"><%= text_field_tag :notes, engagement.notes, class: 'w-full px-2 py-1' %></td>
    </tr>
  <% end %>
</table
